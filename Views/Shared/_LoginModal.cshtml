@model Helperland.Models.User;    

<div class="modal fade" id="LoginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm mx-auto" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Login to your account</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-controller="Home" asp-action="Login" method="post">
                    <div class="input-group mb-3">
                        <input type="email" class="form-control border-right-0" id="EmailId" asp-for="Email" placeholder="Email">
                        <span class="input-group-append bg-white border-left-0">
                            <span class="input-group-text bg-transparent">
                                <i class="fas fa-user"></i>
                            </span>
                        </span>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control border-right-0" id="pass1" asp-for="Password" placeholder="Password">
                        <span class="input-group-append bg-white border-left-0">
                            <span class="input-group-text bg-transparent">
                                <i class="fas fa-lock"></i>
                            </span>
                        </span>
                    </div>
                    <div class="input-group mb-3">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="remember">
                            <label class="form-check-label" for="remember">Remember me</label>
                        </div>
                    </div>
                    <div class="input-group justify-content-center mb-4">
                        <button class="login-btn">Login</button>
                    </div>
                    <div class="input-group justify-content-center">
                        <div>
                            <a href="#" data-dismiss="modal" data-toggle="modal" data-target="#ForgotModal"
                               class="link-clr" id="ForgotModalLink">Forgot password?</a>
                        </div>
                    </div>
                    <div class="input-group justify-content-center">
                        Don't have an account? <a asp-controller="Home" asp-action="CustomerSignup" class="link-clr">Create an account</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>