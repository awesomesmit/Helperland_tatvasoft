@model Helperland.Models.CustomModel
<div class="row">
    <div class="col-md-6">
        <div>
            <div><b>@Model.ServiceStartDate.ToShortDateString() <span>12:00 - 18:00</span></b></div>
            <div><b>Duration:</b> 6 Hrs</div>
        </div>
        <hr>
        <div>
            <b>Service Id:</b>
            <span>@Model.ServiceId</span>
        </div>
        <div>
            <b>Extras:</b>
            <span>@Model.ServiceExtraId</span>
        </div>
        <div>
            <b>Total Payment:</b>
            <span>@Model.TotalCost €</span>
        </div>
        <hr>
        <div>
            <b>Customer Name:</b>
            <span>@Model.FirstName @Model.LastName</span>
        </div>
        <div>
            <b>Service Address:</b>
            <span>@Model.AddressLine1, @Model.AddressLine2 @Model.PostalCode @Model.City</span>
        </div>
        <div>
            <b>Distance:</b>
            <span>15 km</span>
        </div>
        <hr>
        <div>
            <b>Comments: </b>@Model.Comments
            @if (@Model.HasPets)
            {
                <div>I have pets at home.</div>
            }
            else
            {
                <div>I Don't have pets at home.</div>
            }
        </div>
        <hr>
        <div class="action-upcoming-modal">
            <a asp-action="CancelServiceRequest" asp-route-id="@Model.ServiceRequestId">
                <button class="cancel-upcoming">
                    Cancel
                </button>
            </a>
            <a asp-action="CompleteServiceRequest" asp-route-id="@Model.ServiceRequestId">
            <button class="complete-upcoming">
                <img src="~/assets/ic-check.png" class="mr-1 ml-1" alt="">
                Complete
            </button></a>
        </div>
    </div>
    <div class="col-md-6 mt-md-0 mt-2">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3671.6979157244723!2d72.49824711533616!3d23.034861321648275!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x395e8352e403437b%3A0xdc9d4dae36889fb9!2sTatvaSoft!5e0!3m2!1sen!2sin!4v1638349079725!5m2!1sen!2sin"
                width="100%" height="400" style="border:0;" allowfullscreen loading="lazy"></iframe>
    </div>
</div>
