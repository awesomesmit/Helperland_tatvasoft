@model Helperland.Models.User
@{
    ViewData["Title"] = "Customer Signup";
}

@section Styles{
    <link href="~/css/createaccount.css" rel="stylesheet" />
}

<partial name="~/Views/Shared/_LoginModal.cshtml" />

<partial name="~/Views/Shared/_ForgotModal.cshtml" />

<partial name="~/Views/Shared/_PublicHeader.cshtml" />

<Section id="create-account-section" class="create-account-section">
    <div class="container-fluid">
        <div class="create-account-content col-md-6 mx-auto">
            <div class="head text-center">
                <h1>Create Account</h1>
            </div>

            <div class="divide-img d-flex align-items-center justify-content-center mb-5">
                <img src="~/assets/forma-1-copy-5.png" alt="">
            </div>

            <form method="post" asp-controller="Home" asp-action="CustomerSignup">
                <div class="form-row mx-auto">
                    <div class="form-group col-md-6">
                        <input type="text" asp-for="FirstName" class="form-control first-name" id="inputFirstName"
                               placeholder="First Name">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <input type="text" asp-for="LastName" class="form-control last-name" id="inputLastName"
                               placeholder="Last Name">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row mx-auto">
                    <div class="form-group col-md-6 email-m">
                        <input type="email" asp-for="Email" class="form-control email" id="inputEmail" placeholder="Email address">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 MobileNumber-m">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">+46</div>
                            </div>
                            <input type="tel" asp-for="Mobile" class="form-control custom-h"
                                   placeholder="Phone Number">
                        </div>
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row mx-auto">
                    <div class="form-group col-md-6">
                        <input type="password" asp-for="Password" class="form-control password1" id="inputpassword1"
                               placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <input type="password" asp-for="ConfirmPassword" class="form-control password2" id="inputpassword2"
                               placeholder="Repeat Password">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <span class="text-success">@TempData["SuccessMsg"]</span>
                <span class="text-danger">@TempData["ErrorMsg"]</span>
                <div class="form-row mx-auto pl-1">
                    <div class="form-group">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="remember">
                            <label class="form-check-label" for="remember">
                                I have read the <a href="#"
                                                   class="link-clr">privacy policy</a>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-row mx-auto justify-content-center">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary submit-btn mx-auto">Register</button>
                    </div>
                </div>

                <div class="form-row mx-auto justify-content-center">
                    <div class="form-group">
                        Already Registered? <a href="#" data-target="#LoginModal" data-toggle="modal"
                                               class="link-clr">Login now</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</Section>

<div style="flex-grow: 1;"></div>